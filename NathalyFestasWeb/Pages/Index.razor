@page "/"

<div class="container-fluid">
    <div class="header row align-content-center justify-content-center">
        <div class="mt-1">
            <input placeholder="Pesquisar..." type="text" @onchange="SearchChange" class="form-control-plaintext text-center" />
        </div>
    </div>
</div>

<div class="d-flex flex-column align-items-center justify-content-center" style="padding-top: 4rem">

    @if (PedidosFiltered is not null)
    {
        <div class="d-flex flex-column align-items-center justify-content-center">
            @foreach (var pedido in PedidosFiltered)
            {
                <PedidoListItem Pedido="@pedido" @key="@pedido.Id" />
            }
        </div>
    }

    <div>
        <button class="btn btn-primary mb-3" @onclick="@NovoPedido">Novo Pedido</button>
    </div>
</div>